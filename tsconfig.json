{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/layout.jsx",
    "components/ThemeProvider.jsx",
    "components/Sidebar.jsx",
    "components/ProfileAvatar.jsx",
    "components/Header.jsx",
    "components/ui/dropdown-menu.jsx",
    "components/ui/calendar.jsx",
    "components/ui/button.jsx",
    "components/ui/alert-dialog.jsx",
    "components/Statistics/StatisticsCard.jsx",
    "components/Statistics/FinancialStatistics.jsx",
    "components/Sales/SalesTrend.jsx",
    "components/Sales/CalendarDropdown.jsx",
    "components/Platform/TopPlatform.jsx",
    "components/Platform/PlatformCard.jsx",
    "components/Orders/OrderModal.jsx",
    "components/Orders/Order.jsx",
    "components/Orders/LastOrders.jsx",
    "app/layout.jsx",
    "app/page.jsx"
  ],
  "exclude": ["node_modules"]
}
